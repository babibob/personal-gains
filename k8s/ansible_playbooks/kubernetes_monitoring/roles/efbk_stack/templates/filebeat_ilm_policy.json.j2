{
  "policy": {
    "phases": {
      "hot": {
        "min_age": "0ms",
        "actions": {
          "rollover": {
            "max_primary_shard_size": "{{ efbk_maximum_shard_size }}",
            "max_age": "1d"
          }
        }
      },
      "delete": {
        "min_age": "{{ efbk_maximum_log_age }}",
        "actions": {
          "delete": {
            "delete_searchable_snapshot": true
          }
        }
      }
    }
  }
}
